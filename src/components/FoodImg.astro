---
const {src, alt,} = Astro.props;
---

<div class="img-wrapper animate__animated animate__fadeInUp">
    <img class="img" src={src} alt={alt}>
</div>

<style>
	.img-wrapper {
		width: 700px;
		background-color: rgb(255, 233, 208);
		border: 2px solid #695A43;
		transition: 400ms ease-in-out;
		justify-self: start;
		margin: 4em;
	}

	.img-wrapper:hover {
		transition: 400ms ease-in-out;
		background-color: rgb(255, 255, 255);

	}

	.img-wrapper img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		filter: contrast(0.8) saturate(0.7);
		mix-blend-mode: multiply;
		transition: 400ms ease-in-out;
	}

	
	.img-wrapper img:hover {
		width: 100%;
		height: 100%;
		object-fit: cover;
		filter: contrast(1) saturate(1);
		mix-blend-mode: multiply;
		transition: 400ms ease-in-out;
	}

	@media (min-width: 300px) and (max-width: 1200px) {
		.img-wrapper {
			width: auto;
            grid-row: 2;
			grid-column: span 2;
			justify-self: center;
			margin-top: 4em;
			transition: 400ms ease-in-out;
			margin: 1em;	
        }
	}

	@media (min-width: 1200px) and (max-width: 1600px) {
		.img-wrapper {
			width: auto;
        }
	}
</style>