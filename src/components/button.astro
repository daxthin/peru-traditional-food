---
const {name, href} = Astro.props;
---


<button class="button">{name}</button>

<style>
    .button {
		position: relative;
		background: #F4CC9D;
		font-family: 'Lato';
		color: #695A43;
		width: 160px;
		height: 50px;
		box-sizing: border-box;
		padding: 1em;
		z-index: 2;
		cursor: pointer;
		display: flex;
		align-items: center;
		justify-content: center;
		border: 1px solid #695A43;
		text-decoration: none;
	}

	.button::after {
		background: #F4CC9D;
		content: '.';
		color: transparent;
		position: absolute;
		width: 0%;
		height: 100%;
		transition: 250ms ease;
		z-index: -1;
	}

	.button:hover::after {
		background: #f3c38c;
		content: '.';
		color: transparent;
		position: absolute;
		width: 100%;
		height: 100%;
		transition: 250ms ease;
		z-index: -1;
	}

    @media (min-width: 300px) and (max-width: 1200px) {
        .button {
            width: 130px;
            height: 30px;   
        }
	}

	@media (min-width: 1200px) and (max-width: 1600px) {
        .button {
            width: 150px;
            height: 40px;   
        }
	}
</style>