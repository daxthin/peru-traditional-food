const {title} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	html, body {
		margin: 0;
		padding: 0;
		user-select: none;
		background: linear-gradient(180deg, #FED2B9 0%, #D9D9D9 100%);
